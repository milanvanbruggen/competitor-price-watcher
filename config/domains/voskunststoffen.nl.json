{
    "domain": "voskunststoffen.nl",
    "categories": {
        "square_meter_price": {
            "steps": [
                {
                    "type": "click",
                    "selector": "#CybotCookiebotDialogBodyButtonDecline"
                },
                {
                    "type": "wait",
                    "duration": "short"
                },
                {
                    "type": "click",    
                    "selector": "#calculatorThickness"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "type": "select",
                    "selector": "#partControlRadioThickness .checkBoxRadioItem input[type='radio']",
                    "value": "{thickness}",
                    "unit": "mm"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "includes_vat": false,
                    "selector": "#calculatorPrice .price-default",
                    "type": "read_price"
                }
            ]
        },
        "shipping": {
            "steps": [
                {
                    "type": "click",
                    "selector": "#CybotCookiebotDialogBodyButtonDecline"
                },
                {
                    "type": "wait",
                    "duration": "short"
                },
                {
                    "type": "click",    
                    "selector": "#calculatorThickness"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "type": "select",
                    "selector": "#partControlRadioThickness .checkBoxRadioItem input[type='radio']",
                    "value": "{thickness}",
                    "unit": "mm"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "type": "click",    
                    "selector": "#calculatorFigureAndSizes"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "type": "click",
                    "selector": "#calculatorFigure .checkBoxRadioItem:first-child label"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "type": "input",
                    "selector": "#sizeA",
                    "value": "{width}",
                    "unit": "mm"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "type": "input",
                    "selector": "#sizeB",
                    "value": "{length}",
                    "unit": "mm"
                },
                {
                    "type": "blur"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "type": "click",
                    "selector": ".trackingIdInwinkelwagen"
                },
                {
                    "type": "wait",
                    "duration": "default"
                },
                {
                    "type": "click",
                    "selector": ".trackingIdNaarwinkelwagen"
                },
                {
                    "type": "wait",
                    "duration": "long"
                },
                {
                    "type": "input",
                    "selector": ".shoppingCartQuantity-input",
                    "value": "{quantity}",
                    "unit": "pieces"
                },
                {
                    "type": "wait",
                    "duration": "long"
                },
                {
                    "includes_vat": false,
                    "selector": "xpath=//div[@id='shoppingCartSummary']//div[contains(@class, 'table-row')]//span[contains(@class, 'table-row-label') and text()='Verzendkosten']/following-sibling::span[contains(@class, 'table-row-value')]",
                    "type": "read_price",
                    "default_value": 0
                }
            ]
        }
    }
}