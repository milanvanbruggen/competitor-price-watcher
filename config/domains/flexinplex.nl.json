{
    "domain": "flexinplex.nl",
    "categories": {
        "square_meter_price": {
            "steps": [
                {
                    "type": "select",
                    "selector": ".variation__select select",
                    "option_selector": "option[value='{thickness}']",
                    "value": "{thickness}",
                    "unit": "mm"
                },
                {
                    "type": "input",
                    "selector": ".inputs input",
                    "value": "{width}",
                    "unit": "mm"
                },
                {
                    "type": "wait",
                    "duration": 1000
                },
                {
                    "type": "input",
                    "selector": ".inputs input",
                    "value": "{length}",
                    "unit": "mm"
                },
                {
                    "type": "wait",
                    "duration": 1000
                },
                {
                    "type": "read_price",
                    "selector": "#pdp-configurator-summary-top .excl .price",
                    "includes_vat": false
                }
            ]
        }
    }
} 